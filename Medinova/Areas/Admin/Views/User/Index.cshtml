@model List<Medinova.Models.User>

@{
    ViewBag.Title = "Kullanıcı Yönetimi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<div class="card shadow-sm mb-4 border-0" style="border-radius: 10px;">
    <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center border-bottom-0">
        <h5 class="m-0 font-weight-bold" style="color: #2c3e50;">
            <i class="fas fa-users-cog me-2"></i> Sistem Kullanıcıları
        </h5>
        
    </div>

    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover table-striped mb-0 align-middle">
                <thead style="background-color: #f8fafc; color: #475569; font-size: 0.95rem;">
                    <tr>
                        <th scope="col" class="px-4 py-3 border-0">#</th>
                        <th scope="col" class="py-3 border-0">Ad Soyad</th>
                        <th scope="col" class="py-3 border-0">E-posta</th>
                        <th scope="col" class="py-3 border-0">Telefon No</th>
                        <th scope="col" class="text-center py-3 border-0">Yetki (Rol)</th>
                        <th scope="col" class="text-center py-3 border-0">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            count++;
                            <tr>
                                <td class="px-4 font-weight-bold text-muted">@count</td>

                                <td class="font-weight-bold text-dark">
                                    @item.FirstName @item.LastName
                                </td>

                                <td>
                                    <a href="mailto:@item.Email" class="text-decoration-none text-muted">
                                        @item.Email
                                    </a>
                                </td>

                                <td class="text-muted">
                                    @item.PhoneNumber
                                </td>

                                <td class="text-center">
                                    <span class="badge" style="background-color: #e0f2fe; color: #0369a1; padding: 0.5em 0.8em; font-size: 0.85rem;">
                                        @item.Role.RoleName
                                    </span>
                                </td>

                                <td class="text-center">
                                    <a href="/Admin/User/Detail/@item.UserId"
                                       class="btn btn-sm btn-info shadow-sm px-3 me-2"
                                       style="border-radius: 6px; color: #fff; font-weight: 500;"
                                       title="Kullanıcı Detaylarını İncele">
                                        <i class="fas fa-search plus me-1"></i> Detay
                                    </a>

                                    <a href="/Admin/User/DeleteUser/@item.UserId"
                                       class="btn btn-sm btn-danger shadow-sm px-3"
                                       style="border-radius: 6px; font-weight: 500;"
                                       onclick="return confirm('@item.FirstName @item.LastName isimli kullanıcıyı silmek istediğinize emin misiniz?');"
                                       title="Sil">
                                        Sil
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="text-center py-5 text-muted">
                                <i>Sistemde henüz kayıtlı kullanıcı bulunmamaktadır.</i>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>